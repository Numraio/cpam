{
  "dashboard": {
    "title": "SLO Dashboard",
    "tags": ["cpam", "slo", "sre"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Availability SLO (99.9%)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(1 - (sum(rate(api_errors_total[30d])) / sum(rate(api_requests_total[30d])))) * 100",
            "legendFormat": "Availability %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 99.5 },
                { "color": "green", "value": 99.9 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "API Error Budget Remaining",
        "type": "gauge",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "1 - ((sum(rate(api_errors_total[30d])) / sum(rate(api_requests_total[30d]))) / (1 - 0.999))",
            "legendFormat": "Error Budget %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "orange", "value": 0.25 },
                { "color": "yellow", "value": 0.5 },
                { "color": "green", "value": 0.75 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "API Latency p95 (Target: <500ms)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_latency_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "p95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 500 },
                { "color": "red", "value": 1000 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Calculation Success Rate (Target: 99.5%)",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(sum(rate(cpam_calc_batch_total{status=\"completed\"}[30d])) / sum(rate(cpam_calc_batch_total[30d]))) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 99 },
                { "color": "green", "value": 99.5 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "API Error Budget Burn Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(sum(rate(api_errors_total[1h])) / sum(rate(api_requests_total[1h]))) / (1 - 0.999)",
            "legendFormat": "1h Burn Rate (Critical: >14.4x)"
          },
          {
            "expr": "(sum(rate(api_errors_total[6h])) / sum(rate(api_requests_total[6h]))) / (1 - 0.999)",
            "legendFormat": "6h Burn Rate (Warning: >6x)"
          },
          {
            "expr": "(sum(rate(api_errors_total[3d])) / sum(rate(api_requests_total[3d]))) / (1 - 0.999)",
            "legendFormat": "3d Burn Rate (Info: >1x)"
          }
        ],
        "yaxes": [
          {
            "label": "Burn Rate Multiplier",
            "format": "short",
            "logBase": 1
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [14.4],
                "type": "gt"
              },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "name": "API Error Budget Burn Rate Critical",
          "message": "API error budget burning at critical rate"
        }
      },
      {
        "id": 6,
        "title": "API Availability Over Time",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(1 - (sum(rate(api_errors_total[1h])) / sum(rate(api_requests_total[1h])))) * 100",
            "legendFormat": "Current Availability (1h window)"
          },
          {
            "expr": "99.9",
            "legendFormat": "SLO Target (99.9%)"
          }
        ],
        "yaxes": [
          {
            "label": "Availability %",
            "format": "percent",
            "min": 99,
            "max": 100
          }
        ]
      },
      {
        "id": 7,
        "title": "Ingestion Lag (Target: <1 hour)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "cpam_ingestion_lag_seconds / 60",
            "legendFormat": "Avg Lag"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 60 },
                { "color": "red", "value": 120 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Queue Depth (Target: <1000)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "cpam_queue_depth{status=\"total\"}",
            "legendFormat": "Total Jobs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1000 },
                { "color": "red", "value": 5000 }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Calculation Runtime p95 (Target: <5min for 10k items)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(calc_runtime_seconds_bucket{item_count_bucket=\"1001-10000\"}[15m])) by (le)) / 60",
            "legendFormat": "p95 Runtime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Platform SLO (Composite)",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(0.5 * (1 - (sum(rate(api_errors_total[30d])) / sum(rate(api_requests_total[30d])))) + 0.3 * (sum(rate(cpam_calc_batch_total{status=\"completed\"}[30d])) / sum(rate(cpam_calc_batch_total[30d]))) + 0.2 * (1 - clamp_max(cpam_ingestion_lag_seconds / 3600, 1))) * 100",
            "legendFormat": "Platform SLO"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "orange", "value": 99 },
                { "color": "yellow", "value": 99.5 },
                { "color": "green", "value": 99.9 }
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Error Budget Time Remaining (API)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 16, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "(1 - ((sum(rate(api_errors_total[30d])) / sum(rate(api_requests_total[30d]))) / (1 - 0.999))) * 43.2",
            "legendFormat": "Minutes Remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "orange", "value": 10 },
                { "color": "yellow", "value": 20 },
                { "color": "green", "value": 30 }
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "SLO Status Summary",
        "type": "table",
        "gridPos": { "x": 8, "y": 16, "w": 16, "h": 8 },
        "targets": [
          {
            "expr": "(1 - (sum(rate(api_errors_total[30d])) / sum(rate(api_requests_total[30d])))) * 100",
            "legendFormat": "API Availability",
            "instant": true
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_latency_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "API Latency p95 (ms)",
            "instant": true
          },
          {
            "expr": "(sum(rate(cpam_calc_batch_total{status=\"completed\"}[30d])) / sum(rate(cpam_calc_batch_total[30d]))) * 100",
            "legendFormat": "Calc Success Rate",
            "instant": true
          },
          {
            "expr": "cpam_ingestion_lag_seconds / 60",
            "legendFormat": "Ingestion Lag (min)",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "seriesToColumns",
            "options": {}
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "API Availability" },
              "properties": [
                { "id": "unit", "value": "percent" },
                { "id": "decimals", "value": 3 },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "red", "value": 0 },
                      { "color": "yellow", "value": 99.5 },
                      { "color": "green", "value": 99.9 }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": { "id": "byName", "options": "API Latency p95 (ms)" },
              "properties": [
                { "id": "unit", "value": "ms" },
                { "id": "decimals", "value": 0 },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "green", "value": 0 },
                      { "color": "yellow", "value": 500 },
                      { "color": "red", "value": 1000 }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 13,
        "title": "Active Incidents",
        "type": "alertlist",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "tags": [],
          "stateFilter": {
            "firing": true,
            "pending": true,
            "no_data": false,
            "paused": false,
            "ok": false
          }
        }
      },
      {
        "id": 14,
        "title": "Recent Alert History",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{ alertname }}"
          }
        ],
        "yaxes": [
          {
            "label": "Alert Count",
            "format": "short"
          }
        ]
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}
