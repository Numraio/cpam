{
  "dashboard": {
    "title": "CPAM Overview",
    "tags": ["cpam", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "cpam_queue_depth{status=\"total\"}",
            "legendFormat": "Total Jobs"
          },
          {
            "expr": "cpam_queue_depth{status=\"running\"}",
            "legendFormat": "Running"
          },
          {
            "expr": "cpam_queue_depth{status=\"queued\"}",
            "legendFormat": "Queued"
          }
        ],
        "yaxes": [
          {
            "label": "Jobs",
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "Queue Depth Alert",
          "message": "Queue depth exceeds 1000 jobs"
        }
      },
      {
        "id": 2,
        "title": "Calculation Runtime (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(calc_runtime_seconds_bucket[5m]))",
            "legendFormat": "p95 Runtime"
          },
          {
            "expr": "histogram_quantile(0.99, rate(calc_runtime_seconds_bucket[5m]))",
            "legendFormat": "p99 Runtime"
          }
        ],
        "yaxes": [
          {
            "label": "Seconds",
            "format": "s"
          }
        ]
      },
      {
        "id": 3,
        "title": "Ingestion Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "cpam_ingestion_lag_seconds",
            "legendFormat": "Avg Lag"
          }
        ],
        "yaxes": [
          {
            "label": "Seconds",
            "format": "s"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [3600],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "Ingestion Lag Alert",
          "message": "Ingestion lag exceeds 1 hour"
        }
      },
      {
        "id": 4,
        "title": "API Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_errors_total[5m])",
            "legendFormat": "Error Rate"
          },
          {
            "expr": "rate(api_requests_total[5m])",
            "legendFormat": "Request Rate"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "reqps"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Tenants",
        "type": "stat",
        "targets": [
          {
            "expr": "cpam_tenants_active"
          }
        ]
      },
      {
        "id": 6,
        "title": "Calculation Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(cpam_calc_batch_total{status=\"completed\"}[5m]) / rate(cpam_calc_batch_total[5m]) * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 0
  }
}
